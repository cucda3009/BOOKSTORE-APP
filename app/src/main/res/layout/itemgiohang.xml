<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/itemghImage"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_book_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tenSachghTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ten Sach"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/giaTienghTxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="20.000 d"
            android:textSize="18sp"
            android:textColor="#ff9933"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/trusolBtn"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="#eeeeee"
                android:gravity="center"/>
            <TextView
                android:id="@+id/soLuongghTxt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tangslBtn"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="#eeeeee"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>